<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>Upload Puzzle</title>
  </head>

  <body>
    <%- include('./partials/nav.ejs') %>
    <h1>Add Puzzle</h1>
    <form clas="form" action = "/puzzles" method="POST">
      <input type="text" id="img" name="img" placeholder="type you URL here" required>
      <label for="img">URL</label>
      <button type="button" class="btn btn-primary">Upload Image</button>
      <div>
        <img id="display-img" src="">
        <input type="text" id="name" name="name" placeholder="Puzzle Name">
        <label for="name">Puzzle Name</label><br>
        <textarea name="description" placeholder="Brief Description"></textarea><br>
        <input id="exchangeable" type="checkbox" name="exchangeable">
        <label for="exchangeable">Exchangeable</label><br>
        <button type="submit" class="btn btn-primary">Add Puzzle</button>
      </div>
    </form>
  </body>
</html>