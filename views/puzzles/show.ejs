<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <title>Puzzle</title>
</head>
<body>
    <%- include('../partials/nav.ejs') %>
    <% console.log(user) %>
    <h1><%= puzzle.title %></h1>
    <img src="<%=puzzle.img%>" width = "500px">
    <% if (puzzle.exchangeable == true) { %>
        <p>Exhangeable</p>
        <% if (puzzle.isAvailable == true) { %>
        <p>Currently Available</p>
        <% } else { %>
            <p>Someone is currently enjoying this puzzle!</p>
        <% }; %>
        <% } else { %>
        <p>Not Exchangeable</p>
    <% }; %> 
