<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head.ejs') %>
  <link rel="stylesheet" href="/css/style.css">
  <title>Dashboard</title>
</head>

<body>
  <%- include('../partials/nav.ejs') %>
  <div class="container-fluid text-center">
    <img src="https://i.imgur.com/iWw6nnu.png" width="200px">
  </div>
  <div class="container">
    <h1 class="text-center mt-3 display-3 welcome">
      Welcome to your Dashboard <%= user.username %>
    </h1>
  </div>
  <% if (puzzles.length == 0) { %>
    <div class="empty-container container">
      <h3 class="display-5">Nothing here yet...</h3>
      <p class="lead fs-4">Upload a New Puzzle to get your collection started!</p>
      <img src="https://i.imgur.com/6cU702T.png" width="200px">
    </div>
  <% } %>
  <div class="container d-flex flex-wrap">
    <% puzzles.forEach(puzzle => { %>
    <div class="card mx-3 my-3 border-info shadow mb-5 bg-body rounded" style="width: 25rem;">
      <img src="<%= puzzle.img %>" class="card-img-top" height="300px" alt="...">
      <div class="card-body d-flex flex-column">
        <h5 class="card-title"><%= puzzle.title %></h5>
        <p class="card-text">
          <% if (puzzle.exchangeable == true) { %>
          Exhangeable<br>
          <% if (puzzle.isAvailable == true) { %>
          Available for Exchange
          <% } else { %>
          Someone is currently enjoying this puzzle!
          <% }; %>
          <% } else { %>
          Not Exchangeable
          <% }; %> </p>
        <div class="text-center mt-auto">
          <a href="/puzzles/<%= puzzle._id %>"><button class="btn btn-info">View Details</button></a>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</body>

</html>